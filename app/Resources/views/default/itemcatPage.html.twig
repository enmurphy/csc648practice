{% extends 'base.html.twig' %}

{% block stylesheets %}
<style>
.bg-1{
     background-color: #9400D3;
     color: #ffffff;
 }
.bg-2{
    background-color: #43d36d;
    color: #ffffff;
}
</style>
{% endblock %}



{% block body %}

<div class = "container-fluid bg-1 text-center">




    <div class="row">
        <div class="col-sm-4">
            <h1>Categories</h1>
        </div>
        <div class="col-sm-8 bg-2 text-left">
        <ul>
            {% for item in items %}
                <h1> Name: {{ item.name }} </h1>
                <h2> Desc: {{ item.description }} </h2>
                <h2> Price: {{ item.price }} </h2>
            {% endfor %}
        </ul>
        </div>
    </div>
</div>
{% endblock %}
