

{% extends 'base.html.twig' %}
{% block title %}<title>Home</title>{% endblock %}

{% block stylesheets %}
    <style>
        .bg-1{
            background-color: #c03eb4;
            color: #ffffff;
        }
    </style>
{% endblock %}

{% block body %}
    {{ form_start(form) }}
    {{ form_widget(form) }}
    {{ form_end(form) }}
    {% block sideNav %}

    {% endblock %}
    <div class = "container-fluid bg-1 text-center">
        <div class="row">



            <div class="col-sm-8 bg-2 text-left">
                <ul>
                    {% for item in items %}
                        <div class="well">
                            <h1> Name: {{ item.name }} </h1>
                            <h2> Desc: {{ item.description }} </h2>
                            <h2> Price: {{ item.price }} </h2>
                            <h2> <img src = {{ item.image }}  width="300" height="200"> </h2>
                        </div>
                    {% endfor %}
                </ul>
            </div>
        </div>
    </div>
{% endblock %}
